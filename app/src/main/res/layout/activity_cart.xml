<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/lavender"
        android:gravity="center"
        android:text="Your product"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/layoutofcartdetail"
        app:layout_constraintTop_toTopOf="parent"

        />


    <LinearLayout
        android:id="@+id/layoutofcartdetail"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_margin="20dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <ListView
            android:id="@+id/horizontal_recycler_view_cart_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/black"
            android:dividerHeight="5dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/rvcart_item" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#f0f0f0"
        android:elevation="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_home"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="Trang Chủ"
            android:textSize="12sp" />

        <Button
            android:id="@+id/cart_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_cart"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="Giỏ Hàng"
            android:textSize="12sp" />

        <Button
            android:id="@+id/account_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_payment"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="Tài Khoản"
            android:textSize="12sp" />

        <Button
            android:id="@+id/history_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_account"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="Tài Khoản"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>